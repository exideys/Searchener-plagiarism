{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["src", "vite-env.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "vitest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
